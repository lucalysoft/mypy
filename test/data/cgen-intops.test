-- Integer operation test cases for the C back end. 
--
-- See comment on top of cgen-basic.test for more information.

[case testIntUnaryMinus]
void p(int n):
    print(-n)
p(0)  # 0
p(3)  # -3
p(-1) # 1

[case testIntPlus]
void p(int x, int y):
    print(x + y)
p(0, 0)   # 0
p(1, 2)   # 3
p(-1, -2) # -3
p(-2, 3)  # 1
p(3, -4)  # -1

[case testIntMinus]
void p(int x, int y):
    print(x - y)
p(0, 0)   # 0
p(3, 1)   # 2
p(-1, -4) # 3
p(-2, 3)  # -5
p(3, -4)  # 7

[case testIntMul]
void p(int x, int y):
    print(x * y)
p(0, 0)   # 0
p(2, 1)   # 2
p(3, 5)   # 15
# Negative operands currently not supported