-- Test cases for intermediate representation (icode) generation.
--
-- These test cases are related to simple (non-generic) classes.


-- Methods
-- -------


[case testEmptyMethod]
class A:
    void f(self): pass
[out]
def A.f:
    r1 = None
    return r1

[case testMethodWithArguments]
class A:
    int f(self, int x, int y):
        return x + y
[out]
def A.f:
    r3 = r1 + r2 [int]
    return r3
    
[case testCallMethodWithoutArguments]
class A:
    void f(self): pass
void g(A a):
    a.f()
[out]
def g:
    r1 = r0.f() [A]
    r2 = None
    return r2
    
[case testCallMethodWithArguments]
class A:
    int f(self, int x, int y): return 1
int g(A a):
    return a.f(1, 3)
[out]
def g:
    r1 = 1
    r2 = 3
    r3 = r0.f(r1, r2) [A]
    return r3
    
[case testCallMethodViaSelf]
class A:
    void f(self):
        self.f()
[out]
def A.f:
    r1 = r0.f() [A]
    r2 = None
    return r2


-- Attributes
-- ----------


[case testAttributeAccessors]
class A:
    int x
    int y
[out]
def A.$x:
    r1 = r0.x [A]
    return r1
def A.set$x:
    r0.x = r1 [A]
    r2 = None
    return r2
def A.$y:
    r1 = r0.y [A]
    return r1
def A.set$y:
    r0.y = r1 [A]
    r2 = None
    return r2

[case testSetAndQueryAttribute]
class A:
    int x
    int y
void f(A a):
    a.x = a.y
[out]
def f:
    r1 = r0.$y() [A]
    r2 = r0.set$x(r1) [A]
    r3 = None
    return r3


-- Constructing instances
-- ----------------------


[case testConstructInstanceWithDefaultConstructor]
class A:
    pass
A()
[out]
def __init:
    r0 = A()
    r1 = None
    return r1
def A:
    r0 = <construct A>
    return r0
    
[case testNonDefaultInit]
class A:
    void __init__(self, int x):
        x = 2
A(2)
[out]
def __init:
    r0 = 2
    r1 = A(r0)
    r2 = None
    return r2
def A:
    r1 = <construct A>
    r2 = r1.__init__(r0) [A]
    return r1
def A.__init__:
    r1 = 2
    r2 = None
    return r2

[case testInitializeAttributesWhenConstructing]
class A:
    int x
    A a
[out]
def A:
    r0 = <construct A>
    r1 = None
    r0.a = r1 [A]
    r2 = 0
    r0.x = r2 [A]
    return r0
